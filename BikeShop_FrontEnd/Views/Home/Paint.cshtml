@model IEnumerable<BikeShop_FrontEnd.Models.PaintModel>

@{
    ViewBag.Title = "Paint";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Paint</h2>

<p>@ViewBag.Bike</p>

<table class="table">
    <tr>
        <th>Paint Color</th>
        <th>Style</th>
        <th>Color List</th>
        <th></th>
    </tr>
@foreach (var item in Model)
{
    var i = Html.DisplayFor(modelItem => item.COLORNAME);
    <tr>
        
        <td><b>@Html.DisplayFor(modelItem => item.COLORNAME)</b></td>
        <td>@Html.DisplayFor(modelItem => item.COLORSTYLE)</td>
        <td>@Html.DisplayFor(modelItem => item.COLORLIST)</td>
        <td>@Html.RadioButtonFor(modelItem => item.PAINTID, i)</td>

    </tr>
}
</table>
<input type="submit" value="Submit">